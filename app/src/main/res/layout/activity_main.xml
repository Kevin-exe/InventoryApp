<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.dtcc.inventoryapp.MainActivity">

    <ImageButton
        android:onClick="displayDialog"
        android:id="@+id/addButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/plus"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/homeButton"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/home"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/backButton"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/repeat"
        android:text=""
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/db_testing"
        android:layout_width="86dp"
        android:layout_height="71dp"
        android:onClick="nextMenu"
        android:text="DB_TESTING"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/addButton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.6" />

    <ListView
        style = "@style/Testing"
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="87dp" />

</android.support.constraint.ConstraintLayout>
