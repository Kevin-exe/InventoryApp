<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/folder_input_text"
        android:layout_width="209dp"
        android:layout_height="26dp"
        android:layout_margin="10px"
        android:layout_marginTop="8dp"
        android:text="Folder Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/folder_input"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/folder_input_text"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:onClick="createFolderBoxButtons"
        android:id="@+id/submit_folder_Btn"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:layout_marginTop="8dp"
        android:text="SUBMIT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/folder_input"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:onClick="createFolderBoxButtons"
        android:id="@+id/cancelBtn"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:layout_marginTop="8dp"
        android:text="CANCEL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submit_folder_Btn"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>