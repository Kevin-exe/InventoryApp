<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight = "8dp"
    android:paddingTop = "8dp"
    style="@style/BlueTheme">

    <ImageView
        android:id="@+id/folderImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        app:srcCompat="@android:drawable/sym_contact_card" />

    <TextView
        style="@style/BlueTheme"
        android:id="@+id/folderText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_weight="0.59"
        android:text="Folder"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/edit_folder_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:src="@drawable/process" />

    <!--
    <Button
        android:id="@+id/folder_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:focusable="false"/>
    -->

</LinearLayout>